<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="258dp"
        android:transitionName="@string/transitionName">

        <SurfaceView
            android:id="@+id/surfaceView1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/selector_surface_bg"
            android:padding="1dp"
            app:layout_constraintBottom_toTopOf="@id/surfaceView3"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/surfaceView2"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_weight="1" />

        <SurfaceView
            android:id="@+id/surfaceView2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/selector_surface_bg"
            android:padding="1dp"
            app:layout_constraintBottom_toTopOf="@id/surfaceView4"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintLeft_toRightOf="@id/surfaceView1"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_weight="1" />

        <SurfaceView
            android:id="@+id/surfaceView3"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/selector_surface_bg"
            android:padding="1dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/surfaceView4"
            app:layout_constraintTop_toBottomOf="@id/surfaceView1"
            app:layout_constraintVertical_weight="1" />

        <SurfaceView
            android:id="@+id/surfaceView4"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/selector_surface_bg"
            android:padding="1dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintLeft_toRightOf="@id/surfaceView3"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/surfaceView2"
            app:layout_constraintVertical_weight="1" />
    </android.support.constraint.ConstraintLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="#262627"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/tv_volume"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scaleType="center"
            android:src="@mipmap/valume" />

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:background="#676767" />

        <ImageView
            android:id="@+id/iv_routes"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scaleType="center"
            android:src="@mipmap/separate_screen" />

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:background="#676767" />

        <TextView
            android:id="@+id/tv_stream"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/save_stream"
            android:textColor="#C3C3C3"
            android:textSize="13sp" />

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:background="#676767" />

        <ImageView
            android:id="@+id/iv_fullscreen"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scaleType="center"
            android:src="@mipmap/fullscreen" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:drawablePadding="3dp"
            android:drawableTop="@mipmap/talk_remote"
            android:gravity="center"
            android:text="对讲" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:drawablePadding="3dp"
            android:drawableTop="@mipmap/record"
            android:gravity="center"
            android:text="录像" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:drawablePadding="3dp"
            android:drawableTop="@mipmap/capture"
            android:gravity="center"
            android:text="抓拍" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:drawablePadding="3dp"
            android:drawableTop="@mipmap/cloud_platform"
            android:gravity="center"
            android:text="云台" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/line_color" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>